# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*]
charset = utf-8

# space indentation (2)
indent_style = space
indent_size = 2

# Ignore system
[system/**]
insert_final_newline = none
trim_trailing_whitespace = none
indent_style = none
indent_size = none

# Ignore directories from application
[application/{cache,config,libraries}/**]
insert_final_newline = none
trim_trailing_whitespace = none
indent_style = none
indent_size = none
